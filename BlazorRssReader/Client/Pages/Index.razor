@page "/"

@using Blazorise.Sidebar

<Layout Sider="true">
    <LayoutSider>
        <LayoutSiderContent>
            <Sidebar Data="@_SidebarInfo" @ref="_Sidebar" />
        </LayoutSiderContent>
    </LayoutSider>
    <Layout>
        <LayoutHeader Fixed="true">
            <HeaderComponent Title="@_Feed.Title"
                             IsLoadingInProgress="_IsLoadingInProgress"
                             SidebarToggleClicked="ToggleSidebar"
                             SettingsClicked="ShowSettingsModal"
                             SyncClicked="async () => await SyncFeed()"/>
        </LayoutHeader>
        <LayoutContent Class="container">
            <RssFeedComponent Items="@_Items"/>
            <SettingsModal @ref="_SettingsModalRef" />
        </LayoutContent>
    </Layout>
</Layout>